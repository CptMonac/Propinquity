<project name="propinquity.Propinquity" basedir="." default="main">

	
	<property name="main-class" value="${ant.project.name}"/>

	<property name="ref.dir" value="reference"/>
	<property name="src.dir" value="src"/>
	<property name="build.dir" value="bin"/>
	<property name="lib.dir" value="lib"/>

	<path id="classpath">
		<fileset dir="${lib.dir}">
			<include name="**/*.jar"/>
		</fileset>
	</path>
	
	<target name="clean">
		<delete dir="${build.dir}"/>
	</target>

	<target name="compile">
		<mkdir dir="${build.dir}"/>
		<javac includeantruntime="false" srcdir="${src.dir}" destdir="${build.dir}" classpathref="classpath"/>
	</target>

	<target name="jar" depends="compile">
		<unjar dest="${build.dir}">
			<patternset>
				<include name="**/*.class"/>
			</patternset>
			<path refid="classpath"/>
		</unjar>

		<copy todir="${build.dir}/data" failonerror="false">
			<fileset dir="./data"/>
		</copy>

		<jar destfile="${ant.project.name}.jar" basedir="${build.dir}">
			<include name="**/*.class"/>
			<include name="data/**/*"/>
			<manifest>
				<attribute name="Main-Class" value="${main-class}"/>
			</manifest>
		</jar>
		
		<antcall target="clean"/>
	</target>

	<target name="run" depends="compile">
		<java classname="${main-class}" fork="true">
			<sysproperty key="java.library.path" path="${java.library.path}:${lib.dir}/base/opengl/:${lib.dir}/base/opengl/:${lib.dir}/base/serial/"/>
			<jvmarg value="-d32"/>
			<classpath>
				<path refid="classpath"/>
				<path location="${build.dir}"/>
			</classpath>
		</java>
	</target>
	
	<target name="main" depends="run">
		<!-- <antcall target="clean"/> -->
	</target>

</project>
